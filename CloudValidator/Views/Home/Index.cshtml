@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/sb-admin")
<section class="step1">
    @*<div class="panel panel-green" data-bind="visible: isInputPanelCollapsed, click: showInputSection">
            <div class="panel-heading">
                Click to show input section
            </div>
        </div>*@
    <form class="form-horizontal" id="validationForm" enctype="multipart/form-data" method="post" name="validationForm">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">12 Factors Compliance Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="navbar-default" role="navigation">
            <div class="navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="active">
                        <a href="#"><i class="fa fa-sitemap fa-fw active"></i> Input Selection<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li></li>
                            <li>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <label class="control-label col-sm-2" for="codesource">Codebase Source:</label>
                                            <select class="form-control" id="codesource" data-bind="value: codeSourceType">
                                                <option value="folder">Folder Upload</option>
                                                <option value="github">Github</option>
                                                <option value="tfs">Team Foundation Server</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6"></div>
                                        <!-- ko if: codeSourceType() == "folder" -->
                                        <div class="form-group">
                                            <label class="control-label col-sm-2" for="codesource">Upload zipped folder of your project:</label>
                                            <input type="file" id="file" value="Upload Zip" accept=".zip" data-bind="event: {change: fileUpload}" name="file" />
                                        </div>
                                        <!-- /ko -->
                                        <!-- ko ifnot: codeSourceType() == "folder" -->
                                        <div class="form-group">
                                            <label class="control-label col-sm-2" for="codesource">Codebase Source:</label>
                                            <input class="form-control" type="text" placeholder="Enter the link to your project" data-bind="value: codeSourceLink" />
                                        </div>
                                        <!-- /ko -->
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="col-md-6">
                                                <ul class="factor_list">
                                                    <li><label><input type="checkbox" checked value="Logs" placeholder="Externalised Logging" />Externalised Logging</label></li>
                                                    <li><label><input type="checkbox" checked value="Config" />Externalised Config</label></li>
                                                    <li><label><input type="checkbox" checked value="Backing" />Backing Services</label></li>
                                                    <li><label><input type="checkbox" value="Codebase" disabled />Single Codebase</label></li>
                                                    <li><label><input type="checkbox" value="Dependencies" disabled />Isolated Dependencies</label></li>
                                                    <li><label><input type="checkbox" value="Deployment" disabled />Deployment Methodology</label></li>
                                                </ul>
                                            </div>
                                            <div class="col-md-6">
                                                <ul class="factor_list">
                                                    <li><label><input type="checkbox" value="Processes" disabled />Stateless Processes</label></li>
                                                    <li><label><input type="checkbox" value="Port_binding" disabled />Port Binding</label></li>
                                                    <li><label><input type="checkbox" value="Concurrency" disabled />Concurrency</label></li>
                                                    <li><label><input type="checkbox" value="Disposability" disabled />Robust and Resilient System</label></li>
                                                    <li><label><input type="checkbox" value="Envvironment" disabled />Similar Environments</label></li>
                                                    <li><label><input type="checkbox" value="Admin_processes" disabled />Admin processes packaged with application</label></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>


                                    <input type="button" class="btn btn-primary validate-btn" value="Validate" id="btnSubmit" data-bind="click: Validate" />
                                </div>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
        </div>

    </form>
</section>
<br />

<div id="page-wrapper">
    <div class="panel panel-default" data-bind="visible: isValidationComplete">
        <div class="panel-heading">
            <i class="fa fa-clock-o fa-fw"></i> Compliance Report
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i>By Donut Chart
                    </div>
                    <div class="panel-body">
                        <div id="compliance_chart"></div>
                        <a href="#" class="btn btn-default btn-block">View Details</a>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>

            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i>By Numbers
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-4">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    Success
                                </div>
                                <div class="panel-body ">
                                    <h1>
                                        <center>5</center>
                                        @*<small>Sub-heading</small>*@
                                    </h1>
                                </div>
                                @*<div class="panel-footer">
                                        Success Footer
                                    </div>*@
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="panel panel-green">
                                <div class="panel-heading">
                                    Passed
                                </div>
                                <div class="panel-body ">
                                    <h1>
                                        <center>3</center>
                                        @*<small>Sub-heading</small>*@
                                    </h1>
                                </div>
                                @*<div class="panel-footer">
                                        Passed Footer
                                    </div>*@
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="panel panel-danger">
                                <div class="panel-heading">
                                    Failed
                                </div>
                                <div class="panel-body ">
                                    <h1>
                                        <center>2</center>
                                        @*<small>Sub-heading</small>*@
                                    </h1>
                                </div>
                                @*<div class="panel-footer">
                                        Failed Footer
                                    </div>*@
                            </div>
                        </div>

                        <!-- /.panel-body -->
                    </div>
                </div>


                <!-- /.panel-body -->
            </div>


            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bell fa-fw"></i> By Top Impact
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item">
                                <i class="fa fa-comment fa-fw"></i> New Comment
                                <span class="pull-right text-muted small">
                                    <em>4 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-twitter fa-fw"></i> 3 New Followers
                                <span class="pull-right text-muted small">
                                    <em>12 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-envelope fa-fw"></i> Message Sent
                                <span class="pull-right text-muted small">
                                    <em>27 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-tasks fa-fw"></i> New Task
                                <span class="pull-right text-muted small">
                                    <em>43 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-upload fa-fw"></i> Server Rebooted
                                <span class="pull-right text-muted small">
                                    <em>11:32 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-bolt fa-fw"></i> Server Crashed!
                                <span class="pull-right text-muted small">
                                    <em>11:13 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-warning fa-fw"></i> Server Not Responding
                                <span class="pull-right text-muted small">
                                    <em>10:57 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-shopping-cart fa-fw"></i> New Order Placed
                                <span class="pull-right text-muted small">
                                    <em>9:49 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item">
                                <i class="fa fa-money fa-fw"></i> Payment Received
                                <span class="pull-right text-muted small">
                                    <em>Yesterday</em>
                                </span>
                            </a>
                        </div>
                        <!-- /.list-group -->
                        <a href="#" class="btn btn-default btn-block">View All Alerts</a>
                    </div>
                    <!-- /.panel-body -->
                </div>


            </div>
        </div>
    </div>
    @*data-bind="visible: isValidationComplete"*@
    <div class="panel panel-default" data-bind="visible: isValidationComplete">
        <div class="panel-heading">
            <i class="fa fa-clock-o fa-fw"></i> Detailed Analysis Report
        </div>
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="row" data-bind="foreach: FactorCards">
                    <div class="col-lg-3 col-md-4">
                        <div class="panel" data-bind="css : {'panel-green': Status, 'panel-red': !Status}">
                            <div class="panel-heading">

                                <h2 data-bind="text: FactorName"></h2>
                                <div>
                                    <p>Total No Of Files: <span data-bind="text: TotalFiles"></span></p>
                                    <p>Total No Of Files Impacted: <span data-bind="text: FailedFiles"></span></p>
                                    <p>Total No Of Files Non-Impacted: <span data-bind="text: PassedFiles"></span></p>
                                </div>


                            </div>
                            <a href="#" data-bind="attr:{id: FactorName}, click: function(e,p){$root.showDetailReport(FactorName)}">
                                <div class="panel-footer">

                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>

                    @*<div class="col-lg-3 col-md-4">
                        <div class="panel panel-red">
                            <div class="panel-heading">

                                <h2>Factor 2</h2>
                                <div>
                                    <p>Total No Of Files: 10</p>
                                    <p>Total No Of Files Impacted: 8</p>
                                    <p>Total No Of Files Non-Impacted: 2</p>
                                </div>


                            </div>
                            <a href="#">
                                <div class="panel-footer">

                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>*@
                </div>

                <div>
                    <div class="panel panel-default" data-bind="visible: isValidationComplete">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Deep Dive Report
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <table id="myTable" style="width: 100%"></table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/bundles/sb-admin")
@Scripts.Render("~/bundles/index")
